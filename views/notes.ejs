<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('header') %>
    <div class="notes-container">
        <h1>Notes</h1>
        <a href="/add-note" class="add-note-link">Add New Note</a>
        <% notes.forEach((note, index) => { %>
            <div class="note">
                <h2><%= index + 1 %>. <%= note.title %></h2>
                <p><%= note.content %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
